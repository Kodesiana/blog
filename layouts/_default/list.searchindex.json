{{- $.Scratch.Add "searchindex" slice -}}
{{- range $index, $element := (where .Site.RegularPages "Type" "in" .Site.Params.mainSections) -}}
    {{- $.Scratch.Add "searchindex" (dict "id" $index "title" $element.Title "uri" $element.Permalink "tags" $element.Params.tags "category" $element.Params.category "content" $element.Plain "date" $element.Date) -}}
{{- end -}}
{{- $.Scratch.Get "searchindex" | jsonify -}}
