    "axios": "^1.3.4",
    "flexsearch": "^0.7.31",
    "flowbite": "^1.6.4",
    "lazysizes": "^5.3.2",
    "lodash-es": "^4.17.21",
    "medium-zoom": "^1.0.8",
    "mermaid": "^10.1.0",
    "tailwindcss": "^3.3.1"
