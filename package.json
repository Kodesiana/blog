  "scripts": {
    "prepare": "run-p -l install:*",
    "dev": "run-p -l data watch:*",
    "build": "run-s -l data build:*",
    "preview": "run-s -l data build:icons preview:site build:images preview:server",
    "data": "tsx tool/data-fetcher.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "watch:css": "postcss ./assets/styles/global.css -o ./assets/styles/global.dev.css --watch",
    "watch:icons": "tsx tool/loader-icons.ts --watch",
    "watch:site": "./.bin/hugo server --buildDrafts --printMemoryUsage",
    "build:icons": "tsx tool/loader-icons.ts",
    "build:site": "./.bin/hugo --environment production --gc --templateMetrics --noBuildLock --minify",
    "build:images": "tsx tool/loader-images.ts",
    "preview:site": "./.bin/hugo --minify --baseURL http://localhost:9000",
    "preview:server": "tsx tool/server-compress.ts",
    "install:hugo": "tsx tool/loader-hugo.ts",
    "install:partytown": "partytown copylib static/~partytown"
  },
  "dependencies": {
    "@akryum/flexsearch-es": "^0.7.32",
